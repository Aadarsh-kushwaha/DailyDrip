<% layout('layouts/boilerplate') %>
<div class="signup-wrapper">
    <div class="signup-card">

        <h2>Register Yourself at Caffinity </h2>

        <form action="/signup" method="POST">

            <input type="text" name="name" placeholder="Full Name" required>

            <input type="number" name="age" placeholder="Age" min="1" required>

            <input type="email" name="email" placeholder="Email Address" required>

            <input type="text" name="mobile" placeholder="Mobile Number" minlength="10" maxlength="10" required>

            <input type="password" name="password" placeholder="Password" required>

            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>

            <button class="signup-btn">Signup</button>
        </form>

        <!-- Google Signup -->
        <a href="/auth/google">
            <button class="google-btn">
                <img src="/img/google.png" />  
                Sign up with Google
            </button>
        </a>

        <p class="login-text">
            Already have an account?
            <a href="/login">Login Now</a>
        </p>

    </div>
</div>

<style>
    body {
        background: #f3ebe3; /* Dark coffee background */
        font-family: 'Poppins', sans-serif;
    }

    .signup-wrapper {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .signup-card {
        background: #2b2b2b;
        width: 450px;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0 0 10px rgba(255, 212, 143, 0.25);
        border: 1px solid rgba(255, 212, 143, 0.3);
        color: white;
    }

    .signup-card h2 {
        text-align: center;
        color: #f7d08a;
        margin-bottom: 25px;
        font-size: 28px;
    }

    .signup-card input {
        background: #1e1e1e;
        border: 1px solid #444;
        color: white;
        padding: 12px;
        border-radius: 8px;
        width: 100%;
        margin-bottom: 16px;
    }

    .signup-btn {
        width: 100%;
        background: #c49b66;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-size: 16px;
        color: #1a1a1a;
        font-weight: bold;
        transition: 0.3s;
    }

    .signup-btn:hover {
        background: #e6b578;
    }

    .google-btn {
        width: 100%;
        background: white;
        border: none;
        padding: 12px;
        border-radius: 10px;
        margin-top: 8px;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        color: #444;
        font-weight: 500;
        transition: 0.3s;
    }

    .google-btn:hover {
        background: #f1f1f1;
    }

    .google-btn img {
        width: 22px;
    }

    .login-text {
        text-align: center;
        margin-top: 15px;
        color: #c9c9c9;
    }

    .login-text a {
        color: #f7d08a;
        font-weight: 600;
        text-decoration: none;
    }
</style>