<% layout('layouts/boilerplate') %>
<style>
    body {
        background: #f3ebe3; /* Dark coffee background */
        font-family: 'Poppins', sans-serif;
    }

    .login-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-card {
        background: #2b2b2b;
        width: 420px;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0 0 10px rgba(255, 212, 143, 0.25);
        border: 1px solid rgba(255, 212, 143, 0.3);
        color: white;
    }

    .login-card h2 {
        text-align: center;
        color: #f7d08a; /* Coffee golden */
        margin-bottom: 25px;
        font-size: 28px;
    }

    .login-card input {
        background: #1e1e1e;
        border: 1px solid #444;
        color: white;
        padding: 12px;
        border-radius: 8px;
        width: 100%;
        margin-bottom: 16px;
    }

    .login-btn {
        width: 100%;
        background: #c49b66; /* Coffee brown */
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-size: 16px;
        color: #1a1a1a;
        font-weight: bold;
        transition: 0.3s;
    }

    .login-btn:hover {
        background: #e6b578;
    }

    .google-btn {
        width: 100%;
        background: white;
        border: none;
        padding: 12px;
        border-radius: 10px;
        margin-top: 8px;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        color: #444;
        font-weight: 500;
        transition: 0.3s;
    }

    .google-btn:hover {
        background: #f1f1f1;
    }

    .google-btn img {
        width: 22px;
    }

    .signup-text {
        text-align: center;
        margin-top: 15px;
        color: #c9c9c9;
    }

    .signup-text a {
        color: #f7d08a;
        font-weight: 600;
        text-decoration: none;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">

        <h2>Login to Caffinity</h2>

        <form action="/login" method="POST">
            <input type="email" name="email" placeholder="Enter Email" required>
            <input type="password" name="password" placeholder="Enter Password" required>

            <button class="login-btn">Login</button>
        </form>

        <!-- Google Login -->
         <a href="/auth/google" class="google-btn text-decoration-none">
    <img src="/img/google.png" />  
    Login with Google
</a>

        <p class="signup-text">
            Donâ€™t have an account? 
            <a href="/signup">Signup Now</a>
        </p>
    </div>
</div>
