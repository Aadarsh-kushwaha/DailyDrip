<% layout('layouts/boilerplate') %>

<style>
.fixed-img {
  height: 200px;       /* Image ki fixed height */
  object-fit: cover;   /* Crop aur uniform look */
  width: 100%;         /* Full width */
}
.card {
  padding: 0 !important;
}


</style>

<h1 class="mt-3 font-size: 2.5rem text-warning-emphasis text-center">Featured coffees at Caffinity</h1>

<div class="cards d-flex flex-wrap gap-4 mt-4 ms-6">

 <% for (let coffee of coffees) { %>

  <div class="card h-100 container-fluid border border-secondary rounded-top-4" style="width: 20rem; height: 30rem">

    <img src="<%= coffee.image %>" 
         class="card-img-top fixed-img  rounded-top-4" 
         alt="<%= coffee.name %>">

    <div class="card-body bg-dark text-white d-flex flex-column">

      <h5 class="card-title"><%= coffee.name %></h5>

      <p class="card-text"><%= coffee.description %></p>

      <p class="fw-bold">
        ‚Çπ <%= coffee.price %> &nbsp; ‚≠ê <%= coffee.avgRating %>
      </p>

      <input class="btn btn-warning text-dark btn-sm mt-2 rounded-4" 
             type="button" value="üõí Add">

     <input class="btn btn-dark text-warning btn-sm mt-2 rounded-4 view-btn  border-warning  rounded-top-4" type="button" value="üëÅ View Product">

    </div>
  </div>

 <% } %>
</div>


