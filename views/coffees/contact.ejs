<% layout('layouts/boilerplate') %>


  <style>
    body {
      margin: 0;
      font-family: "Poppins", sans-serif;
      background: #f3ebe3;
      color: #3a2a20;
    }

    .contact-wrapper {
      max-width: 1200px;
      margin: 60px auto;
      padding: 0 25px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 50px;
    }

    .left-section {
      padding: 30px;
    }

    .heading {
      font-size: 46px;
      font-weight: 700;
      color: #5a3e2b;
      margin-bottom: 15px;
    }

    .description {
      font-size: 17px;
      line-height: 1.7;
      margin-bottom: 25px;
    }

  .error-text {
    color: red;
    font-size: 0.9rem;
    margin-top: 3px;
  }

  .error-input {
    border: 1.5px solid red !important;
  }


    .info-item {
      margin-bottom: 15px;
      font-size: 18px;
      font-weight: 500;
    }

    .right-section {
      background: #ffffff;
      padding: 35px;
      border-radius: 14px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.12);
    }

    form label {
      font-weight: 600;
      display: block;
      margin-bottom: 8px;
      margin-top: 12px;
    }

    form input,
    form select,
    form textarea {
      width: 100%;
      padding: 12px 14px;
      border: 1px solid #c7b7a3;
      border-radius: 10px;
      font-size: 16px;
      background: #faf6f2;
      margin-bottom: 10px;
      outline: none;
      transition: 0.25s;
    }

    form input:focus,
    form textarea:focus,
    form select:focus {
      border-color: #5a3e2b;
      background: #fff;
    }

    button {
      background: #5a3e2b;
      color: white;
      padding: 14px 28px;
      border: none;
      border-radius: 10px;
      font-size: 18px;
      cursor: pointer;
      width: 100%;
      margin-top: 15px;
      transition: 0.3s;
    }

    button:hover {
      background: #3e291d;
    }
</style>

  <div class="contact-wrapper">

    <!-- Left Content -->
    <div class="left-section">
      <h1 class="heading">Contact Us</h1>
      <p class="description">
        Got questions, feedback or any issue? We at <strong>Caffinity</strong> are always here to help.
        Reach out anytime â€” we would love to connect!
      </p>

      <div class="info-item"><strong>Email:</strong> support@caffinity.com</div>
      <div class="info-item"><strong>Phone:</strong> +91 98765 43210</div>
      <div class="info-item"><strong>Location:</strong> Caffinity 3rd Floor ABC Building Sector 51, Noida, India</div>
    </div>


    <!-- Right Form -->
    <div class="right-section">
      <form class="needs-validation" novalidate  method="POST">

        <label>Your Name</label>
        <input type="text" id="name" placeholder="Enter your full name" required />
         <div class="error-text" id="nameError"></div>

        <label>Email Address</label>
        <input type="email" id="email" placeholder="Enter your email" required />
         <div class="error-text" id="emailError"></div>

        <label>Mobile Number</label>
        <input type="text" id="mobile" placeholder="Enter your phone number" required/>
         <div class="error-text" id="mobileError"></div>

        <label>Issue Type</label>
        <select required>
          <option>Select your issue</option>
          <option>Order Issue</option>
          <option>Payment Issue</option>
          <option>Account Issue</option>
          <option>Feedback</option>
          <option>Other</option>
        </select>

        <label>How did you know about us?</label>
        <select required>
          <option>Select</option>
          <option>Instagram</option>
          <option>Friends</option>
          <option>Google Search</option>
          <option>College / Campus</option>
          <option>Other</option>
        </select>

        <label>Your Message</label>
        <textarea rows="6" id="msg" placeholder="Write your message..." required></textarea>
         <div class="error-text" id="msgError"></div>

        <button type="submit">Send Message</button>
      </form>
    </div>

  </div>
<script>
document.getElementById("contactForm").addEventListener("submit", function (e) {

    let valid = true;

    // Reset all errors
    document.querySelectorAll(".error-text").forEach(el => el.innerText = "");
    document.querySelectorAll(".form-control").forEach(inp => inp.classList.remove("error-input"));

    const name = document.getElementById("name");
    const email = document.getElementById("email");
    const mobile = document.getElementById("mobile");
    const msg = document.getElementById("msg");

    // Name Validation
    if (name.value.trim().length < 3) {
        document.getElementById("nameError").innerText = "Name must be at least 3 characters.";
        name.classList.add("error-input");
        valid = false;
    }

    // Email Validation
    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailPattern.test(email.value.trim())) {
        document.getElementById("emailError").innerText = "Enter a valid email address.";
        email.classList.add("error-input");
        valid = false;
    }
    
    if(mobile.length()!=10){
         document.getElementById("mobileError").innerText = "Number must be at least 10 digits.";
        name.classList.add("error-input");
        valid = false;
    }


    // Message Validation
    if (message.value.trim().length < 10) {
        document.getElementById("msgError").innerText = "Message must be at least 10 characters.";
        message.classList.add("error-input");
        valid = false;
    }

    if (!valid) e.preventDefault();  // block form submit
});
</script>
